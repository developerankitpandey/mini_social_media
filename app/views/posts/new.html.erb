<h1 class="mt-4">New Post</h1>

<%# <%= render 'shared/errors', resource: @post %> 


<%= form_with(model: @post, local: true, html: { multipart: true }) do |form| %>
  <div class="form-group">
    <%= form.label :content, 'Post Content' %>
    <%= form.text_area :content, class: 'form-control', rows: 4, placeholder: 'Enter your post content here', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :image, 'Upload Image (Optional)' %>
    <%= form.file_field :image, class: 'form-control-file' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Create Post', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', posts_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
